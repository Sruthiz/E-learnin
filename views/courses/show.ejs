
<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3><%= course.title %></h3>
    </div>
    <div class="card col-6 offset-2">
        <div class="card">
            <img class="card-img-top" src="<%= course.image %>" alt="course_image">
            <div class="card-body">
                <p class="card-text">
                    
                    <%= course.description %><br>
                    &#8377; <%= course.price.toLocaleString("en-IN") %><br>
                    <%= course.category %><br>
                    <%= course.level %><br>
                    <%= course.popularity %>
                </p>
            </div>
        </div>

        <br>
        <div class="col-1">
            <a href="/courses/<%= course._id %>/edit" class="btn btn-dark">Edit</a>
        </div>
        <br>
        <form method="POST" action="/courses/<%= course._id %>?_method=DELETE">
            <button class="btn btn-dark">Delete</button>
        </form>
    </div>

    <div class="col-8 offset-3">
        
        <h4>Leave a Review</h4>
        <form action="/courses/<%= course.id %>/reviews" method="POST">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-lable">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
            </div>
            <div class="mb-3">
                <label for="comment" class="form-lable">Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
            </div>
            <br>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
    </div>

</div>
